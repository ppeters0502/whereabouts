<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.WaypointActivity">

    <TextView
        android:id="@+id/WaypointHeadline"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:text="Waypoints"
        android:textSize="36sp" />
    <Button
        android:id="@+id/newWaypoint"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/WaypointHeadline"
        android:layout_toRightOf="@id/WaypointHeadline"
        android:text="+"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="50dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/WaypointHeadline"
        android:scrollbars="vertical"/>
</RelativeLayout>